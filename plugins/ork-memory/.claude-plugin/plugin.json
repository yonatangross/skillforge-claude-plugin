{
  "name": "ork-memory",
  "version": "5.0.0",
  "description": "Cross-session memory and knowledge graph â€” Mem0 integration, memory fabric, sync patterns",
  "author": {
    "name": "Yonatan Gross",
    "email": "yonatan2gross@gmail.com"
  },
  "keywords": ["memory", "mem0", "knowledge-graph", "persistence"],
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/lifecycle-mem0-context-retrieval.sh"
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/lifecycle-mem0-webhook-setup.sh"
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/lifecycle-mem0-analytics-tracker.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "mcp__mem0__add_memory|mcp__memory__create_entities",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/posttool-memory-bridge.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/stop-mem0-pre-compaction-sync.sh"
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/stop-auto-remember-continuity.sh"
          }
        ]
      }
    ],
    "Setup": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/setup-mem0-backup-setup.sh"
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/setup-mem0-cleanup.sh"
          }
        ]
      }
    ]
  }
}
