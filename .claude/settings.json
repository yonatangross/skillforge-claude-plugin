{
  "$comment": "Local development settings - hooks use relative paths. For distribution, see hooks/hooks.json",
  "$note": "Consolidated to 20 hooks using dispatcher pattern (down from 44)",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {"type": "command", "command": "./hooks/pretool/bash-dispatcher.sh"}
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {"type": "command", "command": "./hooks/pretool/write-dispatcher.sh"}
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {"type": "command", "command": "./hooks/pretool/task/context-gate.sh"},
          {"type": "command", "command": "./hooks/pretool/task/subagent-validator.sh"}
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {"type": "command", "command": "./hooks/posttool/dispatcher.sh"}
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "Read|Glob|Grep",
        "hooks": [
          {"type": "command", "command": "./hooks/permission/auto-approve-readonly.sh"}
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {"type": "command", "command": "./hooks/permission/auto-approve-safe-bash.sh"}
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {"type": "command", "command": "./hooks/permission/auto-approve-project-writes.sh"}
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {"type": "command", "command": "./hooks/prompt/prompt-dispatcher.sh"}
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {"type": "command", "command": "./hooks/lifecycle/startup-dispatcher.sh"},
          {"type": "command", "command": "./hooks/lifecycle/mem0-context-retrieval.sh"}
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {"type": "command", "command": "./hooks/lifecycle/session-end-dispatcher.sh"}
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {"type": "command", "command": "./hooks/stop/stop-dispatcher.sh"},
          {"type": "command", "command": "./hooks/skill/skill-dispatcher.sh"}
        ]
      }
    ],
    "SubagentStart": [
      {
        "hooks": [
          {"type": "command", "command": "./hooks/subagent-start/subagent-context-stager.sh"}
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {"type": "command", "command": "./hooks/agent/agent-dispatcher.sh"},
          {"type": "command", "command": "./hooks/subagent-stop/subagent-completion-tracker.sh"},
          {"type": "command", "command": "./hooks/subagent-stop/subagent-quality-gate.sh"}
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {"type": "command", "command": "./hooks/notification/desktop.sh"},
          {"type": "command", "command": "./hooks/notification/sound.sh"}
        ]
      }
    ]
  }
}