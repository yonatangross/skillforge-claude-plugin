{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "skill-capabilities.schema.json",
  "title": "Skill Capabilities",
  "description": "Schema for skill capability indexes enabling progressive loading and semantic discovery. Supports both slim array format (recommended) and legacy object format.",
  "type": "object",
  "required": ["name", "version", "description", "capabilities"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Skill identifier (kebab-case)"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "description": {
      "type": "string",
      "maxLength": 200,
      "description": "Brief description of what this skill provides"
    },
    "capabilities": {
      "oneOf": [
        {
          "type": "array",
          "items": { "type": "string" },
          "maxItems": 20,
          "description": "Array of capability names (slim format, recommended for Tier 1)"
        },
        {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/capability"
          },
          "description": "Map of capability name to capability definition (legacy format)"
        }
      ]
    },
    "triggers": {
      "type": "object",
      "properties": {
        "high_confidence": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Regex patterns that strongly indicate this skill"
        },
        "medium_confidence": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Regex patterns that may indicate this skill"
        }
      }
    },
    "integrates_with": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Other skills this skill commonly works with"
    }
  },
  "definitions": {
    "capability": {
      "type": "object",
      "required": ["keywords", "solves"],
      "properties": {
        "keywords": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1,
          "description": "Keywords that indicate this capability is needed"
        },
        "solves": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1,
          "description": "Example problems this capability solves (for semantic matching)"
        },
        "reference_file": {
          "type": "string",
          "description": "Path to detailed reference (supports #section anchors)"
        },
        "template_file": {
          "type": "string",
          "description": "Path to code template"
        },
        "checklist_file": {
          "type": "string",
          "description": "Path to validation checklist"
        },
        "token_cost": {
          "type": "integer",
          "description": "Estimated token cost to load this capability"
        }
      }
    }
  }
}