{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "skill-capabilities.schema.json",
  "title": "Skill Capabilities",
  "description": "Schema for skill capability indexes enabling progressive loading and semantic discovery",
  "type": "object",
  "required": ["name", "version", "description", "capabilities"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Skill identifier (kebab-case)"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "description": {
      "type": "string",
      "maxLength": 200,
      "description": "Brief description of what this skill provides"
    },
    "capabilities": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/capability"
      },
      "description": "Map of capability name to capability definition"
    },
    "triggers": {
      "type": "object",
      "properties": {
        "high_confidence": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Regex patterns that strongly indicate this skill"
        },
        "medium_confidence": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Regex patterns that may indicate this skill"
        }
      }
    },
    "integrates_with": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Other skills this skill commonly works with"
    },
    "progressive_loading": {
      "type": "object",
      "properties": {
        "tier_1_discovery": {
          "$ref": "#/definitions/loading_tier"
        },
        "tier_2_overview": {
          "$ref": "#/definitions/loading_tier"
        },
        "tier_3_specific": {
          "$ref": "#/definitions/loading_tier"
        },
        "tier_4_generate": {
          "$ref": "#/definitions/loading_tier"
        },
        "tier_4_scanning": {
          "$ref": "#/definitions/loading_tier"
        }
      }
    },
    "auto_trigger": {
      "type": "object",
      "properties": {
        "on_agent": {
          "type": "string",
          "description": "Agent that auto-triggers this skill"
        },
        "when": {
          "type": "string",
          "description": "Condition for auto-triggering"
        },
        "action": {
          "type": "string",
          "description": "What to load when triggered"
        }
      }
    },
    "mcp_tools": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "tool": { "type": "string" },
          "library_ids": {
            "type": "array",
            "items": { "type": "string" }
          },
          "commands": {
            "type": "array",
            "items": { "type": "string" }
          },
          "use_when": { "type": "string" },
          "evidence_capture": { "type": "boolean" }
        },
        "required": ["tool"]
      }
    }
  },
  "definitions": {
    "capability": {
      "type": "object",
      "required": ["keywords", "solves"],
      "properties": {
        "keywords": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1,
          "description": "Keywords that indicate this capability is needed"
        },
        "solves": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1,
          "description": "Example problems this capability solves (for semantic matching)"
        },
        "reference_file": {
          "type": "string",
          "description": "Path to detailed reference (supports #section anchors)"
        },
        "template_file": {
          "type": "string",
          "description": "Path to code template"
        },
        "checklist_file": {
          "type": "string",
          "description": "Path to validation checklist"
        },
        "token_cost": {
          "type": "integer",
          "description": "Estimated token cost to load this capability"
        }
      }
    },
    "loading_tier": {
      "type": "object",
      "properties": {
        "file": {
          "type": "string",
          "description": "File to load at this tier"
        },
        "files": {
          "type": "string",
          "description": "Glob pattern for files at this tier"
        },
        "sections": {
          "oneOf": [
            { "type": "string" },
            { "type": "array", "items": { "type": "string" } }
          ],
          "description": "Specific sections to load from SKILL.md"
        },
        "tokens": {
          "oneOf": [
            { "type": "integer" },
            { "type": "string" }
          ],
          "description": "Token cost (number or range like '100-200 each')"
        },
        "use_when": {
          "type": "string",
          "description": "When to use this loading tier"
        }
      }
    }
  }
}
