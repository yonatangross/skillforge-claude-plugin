{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/yonatangross/orchestkit/schemas/consent.schema.json",
  "title": "OrchestKit Consent Log Schema",
  "description": "Schema for GDPR-compliant consent audit trail",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$",
      "description": "Schema version"
    },
    "events": {
      "type": "array",
      "description": "Chronological log of consent actions",
      "items": {
        "$ref": "#/definitions/consentEvent"
      }
    }
  },
  "required": ["version", "events"],
  "definitions": {
    "consentEvent": {
      "type": "object",
      "description": "A single consent action event",
      "properties": {
        "action": {
          "type": "string",
          "enum": ["granted", "declined", "revoked"],
          "description": "Type of consent action"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+$",
          "description": "Privacy policy version at time of consent (for granted/declined)"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of the action"
        }
      },
      "required": ["action", "timestamp"],
      "if": {
        "properties": {
          "action": {
            "enum": ["granted", "declined"]
          }
        }
      },
      "then": {
        "required": ["action", "timestamp", "version"]
      }
    }
  }
}