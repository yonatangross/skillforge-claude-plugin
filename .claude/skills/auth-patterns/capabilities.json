{
  "$schema": "../../schemas/skill-capabilities.schema.json",
  "name": "auth-patterns",
  "version": "2.0.0",
  "description": "Authentication and authorization patterns with OAuth 2.1, Passkeys/WebAuthn, and modern security standards",
  "capabilities": [
    "jwt-tokens",
    "oauth2-pkce",
    "passkeys-webauthn",
    "password-hashing",
    "role-based-access",
    "session-management"
  ],
  "triggers": {
    "high_confidence": [
      "authentication",
      "OAuth.*PKCE",
      "passkey",
      "WebAuthn"
    ],
    "medium_confidence": [
      "login",
      "JWT",
      "token",
      "session",
      "password"
    ]
  },
  "integrates_with": [
    "owasp-top-10",
    "input-validation",
    "api-design-framework"
  ]
}
