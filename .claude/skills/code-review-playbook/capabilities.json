{
  "$schema": "../../schemas/skill-capabilities.schema.json",
  "name": "code-review-playbook",
  "version": "1.0.0",
  "description": "Structured review processes, conventional comments, language-specific checklists, and feedback templates",
  "capabilities": [
    "language-specific",
    "pr-template",
    "quality-checks",
    "review-process",
    "security-review"
  ],
  "triggers": {
    "high_confidence": [
      "review.*code",
      "pr.*review",
      "review.*this",
      "code.*review"
    ],
    "medium_confidence": [
      "look.*at.*code",
      "what.*think.*about",
      "conventional.*comment"
    ]
  },
  "integrates_with": [
    "security-scanning",
    "unit-testing",
    "api-design-framework"
  ]
}
