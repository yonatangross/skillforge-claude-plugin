{
  "$schema": "../../schemas/skill-capabilities.schema.json",
  "name": "hyde-retrieval",
  "version": "1.0.0",
  "description": "HyDE (Hypothetical Document Embeddings) for improved semantic retrieval when queries don't match document vocabulary",
  "capabilities": [
    "hyde-generation",
    "query-to-document",
    "vocabulary-bridging",
    "embedding-optimization"
  ],
  "triggers": {
    "high_confidence": [
      "hyde",
      "hypothetical.*document",
      "vocabulary.*mismatch"
    ],
    "medium_confidence": [
      "query.*expansion",
      "semantic.*gap",
      "embedding.*mismatch"
    ]
  },
  "integrates_with": [
    "embeddings",
    "rag-retrieval",
    "contextual-retrieval"
  ],
  "agent": "data-pipeline-engineer"
}
