{
  "$schema": "../../schemas/skill-capabilities.schema.json",
  "name": "vcr-http-recording",
  "version": "1.0.0",
  "description": "VCR.py HTTP recording for deterministic Python tests",
  "capabilities": [
    "async-support",
    "cassette-replay",
    "custom-matchers",
    "http-recording",
    "llm-api-testing",
    "sensitive-data-filtering"
  ],
  "triggers": {
    "high_confidence": [
      "VCR",
      "cassette",
      "vcr\\.use_cassette",
      "HTTP.*recording"
    ],
    "medium_confidence": [
      "record HTTP",
      "replay HTTP",
      "pytest.mark.vcr"
    ]
  },
  "integrates_with": [
    "msw-mocking",
    "integration-testing",
    "llm-testing"
  ]
}
