{
  "name": "vcr-http-recording",
  "version": "1.0.0",
  "description": "VCR.py HTTP recording for deterministic Python tests",
  "capabilities": [
    "http-recording",
    "cassette-replay",
    "async-support",
    "sensitive-data-filtering",
    "custom-matchers",
    "llm-api-testing"
  ],
  "triggers": [
    "VCR",
    "cassette",
    "HTTP recording",
    "pytest.mark.vcr",
    "record HTTP",
    "replay HTTP",
    "mock external API"
  ],
  "antiPatterns": [
    "committing API keys in cassettes",
    "using 'all' mode in CI",
    "not filtering sensitive data",
    "missing cassettes in git"
  ],
  "dependencies": [
    "msw-mocking",
    "integration-testing",
    "llm-testing"
  ],
  "tags": ["testing", "vcr", "http", "python", "2026"]
}
