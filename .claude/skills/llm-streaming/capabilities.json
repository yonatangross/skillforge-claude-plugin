  "name": "llm-streaming",
  "version": "1.0.0",
  "description": "LLM streaming response patterns for real-time output",
  "capabilities": [
    "partial-json-parsing",
    "sse-responses",
    "stream-cancellation",
    "streaming-with-tools",
    "token-streaming"
