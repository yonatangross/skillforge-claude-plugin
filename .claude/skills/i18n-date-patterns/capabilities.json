{
  "name": "i18n-date-patterns",
  "version": "1.2.0",
  "description": "Comprehensive internationalization patterns for React applications: useTranslation, useFormatting hook, ICU MessageFormat, Trans component, date/time handling, currency/list formatting, and RTL support",
  "capabilities": [
    "ui-string-translation",
    "useTranslation-hook",
    "useFormatting-hook",
    "format-currency",
    "format-list",
    "format-ordinal",
    "format-duration",
    "format-percent",
    "icu-messageformat",
    "plural-rules",
    "trans-component",
    "namespace-organization",
    "bilingual-keyword-matching",
    "dayjs-locale-sync",
    "i18n-date-formatting",
    "translation-key-structure",
    "rtl-support",
    "wait-time-calculation",
    "calendar-components"
  ],
  "triggers": [
    "useTranslation",
    "useFormatting",
    "t(",
    "translation",
    "i18n",
    "internationalization",
    "locale",
    "hebrew",
    "hardcoded string",
    "user-facing text",
    "rtl",
    "date formatting",
    "time display",
    "dayjs",
    "toLocaleDateString",
    "new Date",
    "wait time",
    "calendar",
    "keyword matching",
    "fuzzy matching",
    "formatList",
    "formatILS",
    "formatOrdinal",
    "formatCurrency",
    ".join(",
    "console.log",
    "ICU",
    "plural",
    "Trans component",
    "rich text"
  ],
  "dependencies": [
    "react-i18next",
    "i18next-icu",
    "dayjs"
  ],
  "files": {
    "primary": "frontend/src/lib/dates.ts",
    "formatting": "frontend/src/lib/formatting.ts",
    "formattingHook": "frontend/src/hooks/useFormatting.ts",
    "i18nConfig": "frontend/src/i18n/index.ts",
    "standardsDoc": "docs/i18n-standards.md",
    "translations": [
      "frontend/src/i18n/locales/en/common.json",
      "frontend/src/i18n/locales/he/common.json",
      "frontend/src/i18n/locales/en/patients.json",
      "frontend/src/i18n/locales/he/patients.json",
      "frontend/src/i18n/locales/en/dashboard.json",
      "frontend/src/i18n/locales/he/dashboard.json",
      "frontend/src/i18n/locales/en/owner.json",
      "frontend/src/i18n/locales/he/owner.json",
      "frontend/src/i18n/locales/en/auth.json",
      "frontend/src/i18n/locales/he/auth.json",
      "frontend/src/i18n/locales/en/invoices.json",
      "frontend/src/i18n/locales/he/invoices.json"
    ]
  },
  "antiPatterns": [
    "hardcoded Hebrew strings in UI",
    "hardcoded English strings in UI",
    "new Date().toLocaleDateString()",
    "direct Date object methods for formatting",
    "missing translation keys",
    "inconsistent namespace usage",
    ".join(', ') for user-facing lists",
    "console.log in production code",
    "hardcoded currency symbols (â‚ª, $)",
    "inline plural logic (ternary for count)",
    "dangerouslySetInnerHTML for i18n",
    "string concatenation with JSX for rich text"
  ],
  "patterns": {
    "userFacingText": "Always use t() from useTranslation hook",
    "dataMatching": "Use bilingual keyword arrays for fuzzy matching business logic",
    "dateFormatting": "Use @/lib/dates helpers, never raw Date objects",
    "currencyFormatting": "Use formatILS() from useFormatting hook",
    "listFormatting": "Use formatList() from useFormatting hook, never .join()",
    "pluralization": "Use ICU MessageFormat in translation files",
    "richText": "Use Trans component for embedded React components"
  },
  "progressive_load": {
    "discovery": "capabilities.json",
    "overview": "SKILL.md",
    "references": "references/",
    "checklists": "checklists/",
    "examples": "examples/"
  },
  "token_budget": {
    "discovery": 150,
    "overview": 600,
    "full": 2500
  }
}
