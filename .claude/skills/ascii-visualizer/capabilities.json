{
  "$schema": "../../schemas/skill-capabilities.schema.json",
  "name": "ascii-visualizer",
  "version": "1.0.0",
  "description": "ASCII art visualization for architecture diagrams, workflows, progress tracking, and file trees",
  "capabilities": [
    "architecture-diagrams",
    "comparisons",
    "file-trees",
    "progress-tracking",
    "workflows"
  ],
  "triggers": {
    "high_confidence": [
      "ascii.*diagram",
      "visualize.*architecture",
      "show.*flow",
      "draw.*diagram",
      "create.*visual"
    ],
    "medium_confidence": [
      "diagram",
      "visual",
      "structure",
      "explain.*visually"
    ]
  },
  "integrates_with": [
    "architecture-decision-record",
    "multi-agent-orchestration",
    "devops-deployment"
  ]
}
