{
  "$schema": "../../../.claude/schemas/skill-capabilities.schema.json",
  "name": "browser-content-capture",
  "version": "1.0.0",
  "description": "Capture content from JS-rendered pages, auth-protected sites, and multi-page docs using Playwright MCP or Chrome extension",
  "capabilities": [
    "auth-handling",
    "mcp-tools",
    "multi-page-crawl",
    "skillforge-integration",
    "spa-extraction"
  ],
  "triggers": {
    "high_confidence": [
      "webfetch.*empty",
      "spa.*content",
      "login.*required",
      "javascript.*render"
    ],
    "medium_confidence": [
      "browser.*capture",
      "scrape.*dynamic",
      "react.*docs"
    ]
  },
  "integrates_with": [
    "webapp-testing",
    "streaming-api-patterns",
    "rag-retrieval"
  ]
}
