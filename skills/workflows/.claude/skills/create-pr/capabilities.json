{
  "$schema": "../../../../../.claude/schemas/skill-capabilities.schema.json",
  "name": "create-pr",
  "version": "1.0.0",
  "description": "Create GitHub pull requests with validation and auto-generated descriptions",
  "capabilities": [
    "pr-creation",
    "branch-validation",
    "pr-description-generation",
    "github-cli"
  ],
  "triggers": {
    "high_confidence": [
      "create.*pr",
      "create.*pull.*request",
      "open.*pr",
      "gh.*pr.*create"
    ],
    "medium_confidence": [
      "submit.*pr",
      "push.*pr",
      "ready.*review"
    ]
  },
  "integrates_with": [
    "commit",
    "github-cli",
    "code-review-playbook"
  ],
  "progressive_loading": {
    "tier_1_discovery": {
      "file": "capabilities.json",
      "tokens": 90
    },
    "tier_2_overview": {
      "file": "SKILL.md",
      "tokens": 450
    },
    "tier_3_references": {
      "pr-template": {
        "file": "references/pr-template.md",
        "tokens": 150
      }
    }
  }
}