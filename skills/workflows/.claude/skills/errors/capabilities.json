{
  "$schema": "../../../../../.claude/schemas/skill-capabilities.schema.json",
  "name": "errors",
  "version": "1.0.0",
  "description": "Error pattern analysis and troubleshooting for Claude Code sessions",
  "capabilities": [
    "error-analysis",
    "pattern-detection",
    "fix-suggestions",
    "error-logging"
  ],
  "triggers": {
    "high_confidence": [
      "analyze.*error",
      "error.*pattern",
      "fix.*error",
      "troubleshoot"
    ],
    "medium_confidence": [
      "what.*went.*wrong",
      "debug.*issue",
      "common.*error"
    ]
  },
  "integrates_with": [
    "observability-monitoring"
  ],
  "progressive_loading": {
    "tier_1_discovery": {
      "file": "capabilities.json",
      "tokens": 80
    },
    "tier_2_overview": {
      "file": "SKILL.md",
      "tokens": 300
    }
  }
}