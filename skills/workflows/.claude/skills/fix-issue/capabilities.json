{
  "$schema": "../../../../../.claude/schemas/skill-capabilities.schema.json",
  "name": "fix-issue",
  "version": "1.0.0",
  "description": "Fix GitHub issue with parallel analysis and implementation",
  "capabilities": [
    "issue-resolution",
    "root-cause-analysis",
    "impact-analysis",
    "fix-implementation",
    "test-creation"
  ],
  "triggers": {
    "high_confidence": [
      "fix.*issue",
      "resolve.*issue",
      "fix.*bug",
      "address.*issue"
    ],
    "medium_confidence": [
      "work.*on.*issue",
      "tackle.*issue",
      "debug.*issue"
    ]
  },
  "integrates_with": [
    "github-cli",
    "observability-monitoring",
    "integration-testing"
  ],
  "progressive_loading": {
    "tier_1_discovery": {
      "file": "capabilities.json",
      "tokens": 100
    },
    "tier_2_overview": {
      "file": "SKILL.md",
      "tokens": 650
    },
    "tier_3_references": {
      "commit-template": {
        "file": "references/commit-template.md",
        "tokens": 150
      }
    }
  }
}