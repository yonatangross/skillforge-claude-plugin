{
  "$schema": "../../../../../.claude/schemas/skill-capabilities.schema.json",
  "name": "review-pr",
  "version": "1.0.0",
  "description": "Comprehensive PR review with 6-7 parallel specialized agents",
  "capabilities": [
    "code-quality-review",
    "type-safety-review",
    "security-review",
    "test-coverage-review",
    "architecture-review",
    "ai-code-review"
  ],
  "triggers": {
    "high_confidence": [
      "review.*pr",
      "review.*pull.*request",
      "code.*review",
      "pr.*review"
    ],
    "medium_confidence": [
      "check.*pr",
      "examine.*changes",
      "audit.*code"
    ]
  },
  "integrates_with": [
    "code-review-playbook",
    "security-scanning",
    "test-standards-enforcer",
    "type-safety-validation"
  ],
  "progressive_loading": {
    "tier_1_discovery": {
      "file": "capabilities.json",
      "tokens": 100
    },
    "tier_2_overview": {
      "file": "SKILL.md",
      "tokens": 700
    },
    "tier_3_references": {
      "review-template": {
        "file": "references/review-template.md",
        "tokens": 200
      }
    }
  }
}