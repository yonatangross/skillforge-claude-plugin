{
  "$schema": "../../../.claude/schemas/skill-capabilities.schema.json",
  "name": "doctor",
  "version": "1.0.0",
  "description": "SkillForge health diagnostics - validates permissions, hooks, schemas, coordination, and context budget",
  "capabilities": [
    "permission-rules-analysis",
    "hook-validation",
    "schema-compliance",
    "coordination-health",
    "context-budget"
  ],
  "triggers": {
    "high_confidence": [
      "skf.*doctor",
      "health.*check",
      "validate.*plugin",
      "diagnose.*skillforge"
    ],
    "medium_confidence": [
      "check.*hooks",
      "validate.*permissions",
      "plugin.*health"
    ]
  },
  "integrates_with": [
    "quality-gates",
    "security-scanning"
  ],
  "progressive_loading": {
    "tier_1_discovery": {
      "file": "capabilities.json",
      "tokens": 100
    },
    "tier_2_overview": {
      "file": "SKILL.md",
      "tokens": 600
    },
    "tier_3_references": {
      "permission-rules": {
        "file": "references/permission-rules.md",
        "tokens": 250
      },
      "hook-validation": {
        "file": "references/hook-validation.md",
        "tokens": 200
      },
      "schema-validation": {
        "file": "references/schema-validation.md",
        "tokens": 150
      }
    }
  }
}