{
  "$schema": "../../../.claude/schemas/skill-capabilities.schema.json",
  "name": "remember",
  "version": "1.1.0",
  "description": "Store decisions and patterns in semantic memory with agent scoping and cross-project learning",
  "capabilities": [
    "semantic-memory-storage",
    "best-practice-tracking",
    "category-detection",
    "cross-project-learning"
  ],
  "triggers": {
    "high_confidence": [
      "remember",
      "store.*decision",
      "save.*pattern",
      "remember.*global"
    ],
    "medium_confidence": [
      "note.*worked",
      "this.*worked",
      "this.*failed"
    ]
  },
  "integrates_with": ["mem0-memory", "best-practices", "recall"]
}
