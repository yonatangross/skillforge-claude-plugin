{
  "$schema": "../../../.claude/schemas/skill-capabilities.schema.json",
  "name": "recall",
  "version": "1.1.0",
  "description": "Search and retrieve decisions and patterns from semantic memory with graph relationships, agent filtering, and cross-project search",
  "capabilities": [
    "semantic-memory-search",
    "category-filtering",
    "cross-project-recall",
    "time-based-formatting",
    "graph-relationship-search",
    "agent-scoped-search"
  ],
  "triggers": {
    "high_confidence": [
      "recall",
      "search.*memory",
      "find.*decision",
      "what.*we.*decide",
      "recall.*graph",
      "recall.*global"
    ],
    "medium_confidence": [
      "remember.*about",
      "did.*we.*decide",
      "what.*pattern",
      "what.*does.*agent.*recommend"
    ]
  },
  "integrates_with": [
    "mem0-memory",
    "remember",
    "best-practices"
  ],
  "flags": {
    "--graph": "Enable graph search to find related entities and relationships",
    "--agent": "Filter results to a specific agent's memories",
    "--global": "Search cross-project best practices",
    "--category": "Filter by category",
    "--limit": "Maximum results to return"
  },
  "progressive_loading": {
    "tier_1_discovery": {
      "file": "capabilities.json",
      "tokens": 110
    },
    "tier_2_overview": {
      "file": "SKILL.md",
      "tokens": 600
    }
  }
}
