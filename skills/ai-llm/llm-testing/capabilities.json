{
  "$schema": "../../../.claude/schemas/skill-capabilities.schema.json",
  "name": "llm-testing",
  "version": "2.0.0",
  "description": "Testing patterns for LLM-based applications with DeepEval and RAGAS metrics",
  "capabilities": [
    "async-timeout-testing",
    "deepeval-assertions",
    "golden-dataset-testing",
    "llm-response-mocking",
    "structured-output-validation",
    "vcr-recording"
  ],
  "triggers": {
    "high_confidence": [
      "LLM.*test",
      "test.*AI",
      "DeepEval",
      "mock.*LLM"
    ],
    "medium_confidence": [
      "AI test",
      "mock LLM",
      "structured output",
      "quality gate"
    ]
  },
  "integrates_with": [
    "vcr-http-recording",
    "llm-evaluation",
    "unit-testing"
  ]
}
