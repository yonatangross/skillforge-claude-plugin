{
  "$schema": "../../../.claude/schemas/skill-capabilities.schema.json",
  "name": "run-tests",
  "version": "1.0.0",
  "description": "Comprehensive test execution with parallel analysis and coverage reporting",
  "capabilities": [
    "test-execution",
    "coverage-reporting",
    "failure-analysis",
    "parallel-testing"
  ],
  "triggers": {
    "high_confidence": [
      "run.*test",
      "execute.*test",
      "pytest",
      "npm.*test"
    ],
    "medium_confidence": [
      "check.*test",
      "test.*coverage",
      "verify.*test"
    ]
  },
  "integrates_with": [
    "unit-testing",
    "integration-testing",
    "code-review-playbook"
  ],
  "progressive_loading": {
    "tier_1_discovery": {
      "file": "capabilities.json",
      "tokens": 90
    },
    "tier_2_overview": {
      "file": "SKILL.md",
      "tokens": 450
    },
    "tier_3_references": {
      "commands": {
        "file": "references/test-commands.md",
        "tokens": 150
      }
    }
  }
}