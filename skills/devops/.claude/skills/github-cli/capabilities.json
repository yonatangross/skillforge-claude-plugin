{
  "$schema": "../../../../../.claude/schemas/skill-capabilities.schema.json",
  "name": "github-cli",
  "version": "2.0.0",
  "description": "GitHub CLI (gh) mastery for issues, PRs, Projects v2, and automation. Source of truth for SkillForge development workflow.",
  "capabilities": [
    "automation-patterns",
    "graphql-api",
    "issue-management",
    "pr-workflows",
    "projects-v2",
    "skillforge-workflow"
  ],
  "triggers": {
    "high_confidence": [
      "gh\\s+(issue|pr|project|api)",
      "create.*issue",
      "create.*PR",
      "GitHub.*project"
    ],
    "medium_confidence": [
      "milestone",
      "pull.*request",
      "project.*board",
      "issue.*label"
    ]
  },
  "integrates_with": [
    "devops-deployment",
    "code-review-playbook"
  ]
}
