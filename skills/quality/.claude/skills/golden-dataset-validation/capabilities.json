{
  "$schema": "../../../../../.claude/schemas/skill-capabilities.schema.json",
  "name": "golden-dataset-validation",
  "version": "1.0.0",
  "description": "Validation rules, schema checks, duplicate detection, and coverage analysis for golden dataset integrity",
  "capabilities": [
    "coverage-analysis",
    "duplicate-detection",
    "referential-integrity",
    "schema-validation"
  ],
  "triggers": {
    "high_confidence": [
      "validate.*golden.*dataset",
      "check.*duplicate",
      "schema.*validation"
    ],
    "medium_confidence": [
      "integrity.*check",
      "coverage.*analysis"
    ]
  },
  "integrates_with": [
    "golden-dataset-management",
    "golden-dataset-curation",
    "pgvector-search"
  ]
}
