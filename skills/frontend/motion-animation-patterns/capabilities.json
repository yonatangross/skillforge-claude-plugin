{
  "$schema": "../../../.claude/schemas/skill-capabilities.schema.json",
  "name": "motion-animation-patterns",
  "version": "1.0.0",
  "description": "Motion (Framer Motion) animations for React 19 applications with centralized presets, page transitions, modals, stagger lists, and RTL support",
  "capabilities": [
    "animation-presets",
    "collapse-expand",
    "hover-interactions",
    "modal-animations",
    "page-transitions",
    "rtl-animations",
    "skeleton-loaders",
    "stagger-animations"
  ],
  "triggers": {
    "high_confidence": [
      "motion animation",
      "framer motion",
      "animate.*component",
      "page transition",
      "modal animation",
      "stagger.*list"
    ],
    "medium_confidence": [
      "hover effect",
      "loading skeleton",
      "fade.*in",
      "slide.*up",
      "entrance animation"
    ]
  },
  "integrates_with": [
    "react-server-components-framework",
    "design-system-starter",
    "i18n-date-patterns",
    "performance-optimization"
  ]
}
