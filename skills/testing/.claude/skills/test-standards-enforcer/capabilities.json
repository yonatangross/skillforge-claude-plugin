{
  "$schema": "../../../../../.claude/schemas/skill-capabilities.schema.json",
  "name": "test-standards-enforcer",
  "version": "1.0.0",
  "description": "Enforce testing best practices with blocking validation for AAA pattern, naming, and coverage",
  "capabilities": [
    "aaa-pattern",
    "coverage-threshold",
    "test-isolation",
    "test-location",
    "test-naming"
  ],
  "triggers": {
    "high_confidence": [
      "test.*standard",
      "AAA.*pattern",
      "coverage.*threshold"
    ],
    "medium_confidence": [
      "test.*naming",
      "test.*location"
    ]
  },
  "integrates_with": [
    "unit-testing",
    "integration-testing",
    "e2e-testing"
  ]
}
