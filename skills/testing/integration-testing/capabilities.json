{
  "$schema": "../../../.claude/schemas/skill-capabilities.schema.json",
  "name": "integration-testing",
  "version": "1.0.0",
  "description": "Integration testing patterns for API, database, and service tests",
  "capabilities": [
    "api-testing",
    "database-testing",
    "test-plan-template"
  ],
  "triggers": {
    "high_confidence": [
      "integration.*test",
      "api.*test",
      "database.*test"
    ],
    "medium_confidence": [
      "service.*test",
      "endpoint.*test"
    ]
  },
  "integrates_with": [
    "unit-testing",
    "e2e-testing",
    "test-data-management"
  ]
}
