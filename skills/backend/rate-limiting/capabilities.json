{
  "$schema": "../../../.claude/schemas/skill-capabilities.schema.json",
  "name": "rate-limiting",
  "version": "1.0.0",
  "description": "API rate limiting with Redis, token bucket, and sliding window algorithms",
  "capabilities": [
    "sliding-window",
    "slowapi-redis",
    "tiered-limits",
    "token-bucket"
  ],
  "triggers": {
    "high_confidence": [
      "rate.?limit",
      "throttl",
      "token.?bucket",
      "sliding.?window",
      "slowapi"
    ],
    "medium_confidence": [
      "too.?many.?requests",
      "429",
      "abuse.?protect",
      "api.?limit"
    ]
  },
  "integrates_with": [
    "api-design-framework",
    "caching-strategies",
    "resilience-patterns"
  ]
}
