{
  "$schema": "../../../../../.claude/schemas/skill-capabilities.schema.json",
  "name": "api-design-framework",
  "version": "1.1.0",
  "description": "Comprehensive API design patterns, versioning strategies, error handling conventions, and OpenAPI templates",
  "capabilities": [
    "authentication",
    "endpoint-design",
    "error-handling",
    "openapi-spec",
    "pagination",
    "rate-limiting",
    "rest-design",
    "skillforge-api",
    "versioning"
  ],
  "triggers": {
    "high_confidence": [
      "design.*api",
      "create.*endpoint",
      "add.*route",
      "api.*pattern",
      "rest.*design"
    ],
    "medium_confidence": [
      "backend.*api",
      "http.*method",
      "request.*response"
    ]
  },
  "integrates_with": [
    "owasp-top-10",
    "integration-testing",
    "type-safety-validation"
  ]
}
