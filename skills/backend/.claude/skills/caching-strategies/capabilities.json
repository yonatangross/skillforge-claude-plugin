{
  "$schema": "../../../../../.claude/schemas/skill-capabilities.schema.json",
  "name": "caching-strategies",
  "version": "1.0.0",
  "description": "Backend caching with Redis: write-through, write-behind, cache-aside, invalidation",
  "capabilities": [
    "cache-aside",
    "cache-invalidation",
    "stampede-prevention",
    "write-behind",
    "write-through"
  ],
  "triggers": {
    "high_confidence": [
      "cache.?aside",
      "write.?through",
      "write.?behind",
      "cache.?invalidat",
      "redis.?cache"
    ],
    "medium_confidence": [
      "caching",
      "cache.?miss",
      "cache.?hit",
      "ttl",
      "expire"
    ]
  },
  "integrates_with": [
    "performance-optimization",
    "background-jobs",
    "rate-limiting"
  ]
}
