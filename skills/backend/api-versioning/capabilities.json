{
  "$schema": "../../../.claude/schemas/skill-capabilities.schema.json",
  "name": "api-versioning",
  "version": "1.0.0",
  "description": "API versioning strategies: URL path, header, content negotiation, deprecation",
  "capabilities": [
    "breaking-changes",
    "deprecation",
    "header-versioning",
    "url-versioning"
  ],
  "triggers": {
    "high_confidence": [
      "api.?version",
      "v1.*v2",
      "deprecat",
      "sunset",
      "breaking.?change"
    ],
    "medium_confidence": [
      "version",
      "backward.?compat",
      "api.?evolution"
    ]
  },
  "integrates_with": [
    "api-design-framework",
    "error-handling-rfc9457"
  ]
}
