{
  "$schema": "../../../.claude/schemas/skill-capabilities.schema.json",
  "name": "langgraph-human-in-loop",
  "version": "1.0.0",
  "description": "LangGraph human-in-the-loop patterns for approval workflows, manual review gates, user feedback integration, and interactive agent supervision",
  "capabilities": [
    "approval-patterns",
    "feedback-integration",
    "interactive-supervision",
    "interrupt-before",
    "resume-workflow",
    "state-inspection"
  ],
  "triggers": {
    "high_confidence": [
      "human.*loop",
      "approval.*workflow",
      "interrupt.*before",
      "manual.*review",
      "pause.*human"
    ],
    "medium_confidence": [
      "human.*approval",
      "wait.*user",
      "review.*gate",
      "supervisor.*pattern"
    ]
  },
  "integrates_with": [
    "langgraph-checkpoints",
    "langgraph-state",
    "langgraph-supervisor",
    "multi-agent-orchestration"
  ]
}
