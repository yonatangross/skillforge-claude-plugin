  "progressive_loading": {
    "enabled": true,
    "strategy": "semantic-discovery",
    "tiers": {
      "tier_1_discovery": {
        "description": "Initial task analysis - determine skill relevance",
        "typical_files": ["capabilities.json"],
        "typical_tokens": "100-110",
        "when": "Always loaded first for semantic matching"
      },
      "tier_2_overview": {
        "description": "Skill confirmed relevant - load patterns and best practices",
        "typical_files": ["SKILL.md"],
        "typical_tokens": "300-800",
        "when": "Skill matches task keywords or problems"
      },
      "tier_3_specific": {
        "description": "Need specific implementation guidance",
        "typical_files": ["references/*.md", "SKILL.md#sections"],
        "typical_tokens": "90-300 per file",
        "when": "Implementing specific patterns or solving specific problems"
      },
      "tier_4_generate": {
        "description": "Ready to generate code/config",
        "typical_files": ["templates/*", "examples/*"],
        "typical_tokens": "150-400 per file",
        "when": "Generating boilerplate, scaffolding, or following templates"
      },
      "tier_4_scanning": {
        "description": "Need to run scans and capture evidence",
        "typical_files": ["SKILL.md#scanning-sections"],
        "typical_tokens": "200-300",
        "when": "Running security scans, dependency audits, or evidence capture"
      }
    },
    "auto_triggers": {
      "security-scanning": {
        "skill": "security-checklist",
        "agent": "code-quality-reviewer",
        "when": "reviewing code for production",
        "action": "load tier_4_scanning"
      }
    }
  },

